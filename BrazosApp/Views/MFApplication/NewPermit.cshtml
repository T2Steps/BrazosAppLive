    <script>
        function Submit() {

            var str = validate();

            if (str == "Invalid") {
                return false;
            }

            else if (str == "Valid") {
                $('#saveBtn').prop('disabled', true);
                var successmsg = "";
                var infomsg = "";
                var errormsg = "";

                if (lang == 1) {
                    successmsg = "Informations Saved Successfully";
                    infomsg = "Please Upload Relevent Documents and Submit the Form";
                    errormsg = "Unexpected Error Occurred"
                }
                else if (lang == 2) {
                    successmsg = "Información guardada exitosamente";
                    infomsg = "Cargue los documentos relevantes y envíe el formulario";
                    errormsg = "Ocurrió un error inesperado"
                }

                $.ajax({
                    type: "POST",
                    url: "/MFNewPermit",
                    data: $('#NewPermitDataForm').serialize(),
                    beforeSend: function () {
                        $('div#loading-wrapper').show();
                        
                    },
                    success: function (data) {
                        if (data.success) {
                            if (data.type == "Create") {
                                $('#estId').val(data.id);
                                $('#encryptedEstId').val(data.encryptid);
                                $('audio#success_sound')[0].play();
                                setTimeout(() => {
                                    toastr.success(successmsg);
                                }, 500)
                                setTimeout(() => {
                                    toastr.info(infomsg);
                                }, 3000)
                                loadDataTable(false, "No");
                            }
                            else if (data.type == "Update") {
                                $('audio#success_sound')[0].play();
                                setTimeout(() => {
                                    toastr.success(successmsg);
                                }, 500)
                            }
                            $('#info').prop('disabled', true);
                            $('#certexpdTDateIcon').css('pointer-events', 'none')
                            $('#docsView').show();
                            $('#submitBtn').show();
                            $('#saveBtn').hide();
                            $('#editBtn').show();
                            $('#certexpdTError').text('')
                        }
                        else {
                            $('audio#errorsound')[0].play();
                            setTimeout(() => {
                                toastr.error(errormsg);
                            }, 775)
                        }
                    },
                    error: function (data) {
                        console.log(data);
                    },
                    complete: function () {
                        $('div#loading-wrapper').hide();
                        $('#spin').hide();
                        $('#saveicon').show();
                        $('#saveBtn').prop('disabled', false);
                    }
                })
            }
        }
    </script>

