@section Scripts{
      <script>
            $(document).ready(function () {
                var progress = 0;
                var progressBar = $('#progress');

                $('#increaseBtn').click(function () {
                    progress += 10;
                    if (progress <= 100) {
                        progressBar.css('width', progress + '%');
                    }
                });
            });
      </script>
