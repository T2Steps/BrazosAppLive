@{
      Layout = null;
      ViewData["Title"] = "Access Denied";
}

<!DOCTYPE html>
<html lang="en">
<head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>@ViewData["Title"] - BrazosApp</title>
      <link rel="icon" href="@ViewBag.baseurl/Images/Logo/logoclient.png" type="image/x-icon" />
      <style>
            body {
                font-family: Arial, sans-serif;
                background-color: #f4f4f4;
                margin: 0;
                padding: 0;
                display: flex;
                justify-content: center;
                align-items: center;
                height: 100vh;
            }

            .container {
                text-align: center;
            }

            h1 {
                color: #333;
                margin-bottom: 20px;
            }

            p {
                color: #666;
                margin-bottom: 30px;
            }

            .icon {
                font-size: 100px;
                color: #ff6347;
                margin-bottom: 30px;
            }

        .button {
            display: inline-block;
            padding: 10px 10px;
            color: #7aa1db;
            border-color: #7aa1db;
            text-decoration: none;
            border-radius: 5px;
            border: none;
            border: 2px solid
        }

            .button:hover {
                background-color: #7aa1db;
                border-color: #7aa1db;
                color: white
            }
      </style>
</head>
<body>
      <div class="container">
            <div class="icon">&#9888;</div>
            <h1>Access Denied</h1>
            <p>You do not have permission to access this page.</p>
        <button type="button" class="button" onclick="window.location.href='@ViewBag.Url'">Go To Login Page &#10144;</button>
      </div>
</body>
</html>