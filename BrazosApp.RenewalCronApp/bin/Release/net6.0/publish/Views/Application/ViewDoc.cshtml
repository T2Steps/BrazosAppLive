@{
      Layout = null;
      var id = ViewBag.Id;
      var fileName = ViewBag.FileName;
      var ext = Convert.ToString(ViewBag.Ext);
}

@*<style>
    body, html {
        height: 100%;
        margin: 0;
        display: flex;
        justify-content: center;
        align-items: center;
    }
</style>*@

@{
      if (ext == ".pdf")
      {
            <style>
                  body, html {
                      height: 100%;
                      margin: 0;
                  }

                  .iframe-container {
                      width: 100%;
                      height: 100vh;
                      display: flex;
                      justify-content: center;
                      align-items: center;
                  }

                  .iframe-wrapper {
                      width: 100%; /* Adjust this value as needed */
                      max-width: 1550px; /* Adjust this value as needed */
                      height: 100%;
                  }

                  iframe {
                      width: 100%;
                      height: 100%;
                      border: none; /* Optional: removes iframe border */
                  }
            </style>
      }
      else
      {
           <style>
                body, html {
                    height: 100%;
                    margin: 0;
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    background-color:lightgray
                }
            </style> 
      }
}

@{
      if (ext == ".pdf")
      {
            <div class="iframe-container">
                  <div class="iframe-wrapper">
                        <iframe src="/PermitDocuments/Food/@id/@fileName" frameborder="0"></iframe>
                  </div>
            </div>
      }
      else
      {
            <img src="/PermitDocuments/Food/@id/@fileName" />
      }
}
